<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_add_page"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="70dp"
        android:onClick="onAddPage"
        android:text="Создать страницу"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_add_page3"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:onClick="onDeletePage"
        android:text="удалить страницу"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_add_page" />

    <Button
        android:id="@+id/button_add_page4"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="56dp"
        android:onClick="onTaskPageAdd"
        android:text="открыть задачник"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button_open_web"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:onClick="onSwipe"
        android:text="свайп обновить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_open_web2" />

    <Button
        android:id="@+id/button_open_web3"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:onClick="onMenu"
        android:text="список и контекстное меню"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_open_web" />

    <Button
        android:id="@+id/button_open_web2"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:onClick="onWeb"
        android:text="открыть сайт"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_add_page4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Размер стека"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_add_page3" />

    <TextView
        android:id="@+id/textViewValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/button_add_page3" />

</androidx.constraintlayout.widget.ConstraintLayout>