<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="30dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_task_1_3"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="76dp"
        android:onClick="onTask1And3"
        android:text="Задание 1,3" />

    <Button
        android:id="@+id/btn_task_2"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="76dp"
        android:onClick="onTask2"
        android:text="Задание 2" />

    <Button
        android:id="@+id/btn_task4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onTask4"
        android:text="Задание 4" />

</LinearLayout>