<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFieldActivity">

    <com.example.sudoku.view.SudokuFieldView
        android:id="@+id/sudokuLayout"
        android:layout_width="380dp"
        android:layout_height="405dp"
        app:boardColor="#000000"
        app:cellFillColor="#6600DDFF"
        app:cellsHighlightColor="#2600DDFF"
        app:letterColor="#000000"
        app:letterColorUser="#768676"
        app:letterColorError="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243">

    </com.example.sudoku.view.SudokuFieldView>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="368dp"
        android:layout_height="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="@dimen/val_w"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/button_style"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="@dimen/val_w"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_style"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="@dimen/val_w"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_style"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="@dimen/val_w"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_style"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="@dimen/val_w"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_style"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="@dimen/val_w"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_style"
                android:text="6" />

            <Button
                android:id="@+id/btn_end"
                android:onClick="onReset"
                android:layout_width="@dimen/val_w"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_style"
                android:text="âŒ«" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="@dimen/val_w"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_style"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="@dimen/val_w"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_style"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="@dimen/val_w"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_style"
                android:text="9" />

        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>